{
  "name": "macicon",
  "description": "Fast macOS-styled app icon generator",
  "version": "1.0.1",
  "type": "module",
  "module": "./src/cli.ts",
  "bin": {
    "macicon": "./src/index.ts"
  },
  "author": {
    "name": "Kristof Dewilde",
    "email": "code@qrivi.dev"
  },
  "scripts": {
    "build": "rm -rf ./build; bun build ./src/cli.ts --compile --minify --outfile ./build/macicon && find . -name \"*.bun-build\" -delete",
    "check": "biome check ./src",
    "check:apply": "biome check --apply ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "bun": "^1.0.31",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "jimp": "^0.22.12",
    "zod": "^3.22.4"
  }
}
